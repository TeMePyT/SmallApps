<Window x:Class="Mordor_s_Cruel_Plan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mordor_s_Cruel_Plan"
        mc:Ignorable="d"
        Title="Gandalf`s Mood Calculator" Height="450" Width="800">
    <Grid x:Name="Mood_Calculator">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="235*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="469*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Height="190" Margin="46,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261" Grid.ColumnSpan="2" TextChanged="Input_TextChanged"/>
        <Button Content="Calculate Mood" HorizontalAlignment="Left" Margin="23.184,183,0,0" VerticalAlignment="Top" Width="129" Height="43" RenderTransformOrigin="0.398,0.466" Grid.Column="2" Click="Button_Click"/>
        <Label x:Name="Mood" Content="Mood" HorizontalAlignment="Left" Margin="256,154,0,0" VerticalAlignment="Top" Height="72" Width="173" FontSize="24" Grid.Column="2"/>

    </Grid>
</Window>
